generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Practice {
  id           String       @id @default(cuid())
  name         String
  code         String       @unique
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  teams        PracticeTeam[]
  users        User[]
  patients     Patient[]
}

model PracticeTeam {
  id          String   @id @default(cuid())
  name        String
  description String?
  practiceId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  practice Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  members  TeamMembership[]

  @@unique([practiceId, name])
}

model TeamMembership {
  id          String           @id @default(cuid())
  userId      String
  teamId      String
  role        TeamRole
  createdAt   DateTime         @default(now())

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  team        PracticeTeam     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  permissions TeamRolePermission[]

  @@unique([userId, teamId])
}

model TeamRolePermission {
  id             String       @id @default(cuid())
  membershipId   String
  permissionCode String

  membership TeamMembership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  @@unique([membershipId, permissionCode])
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  passwordHash   String
  displayName    String
  shortName      String
  locale         String?          @default("de-DE")
  avatarUrl      String?
  practiceId     String
  isPracticeAdmin Boolean         @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  practice Practice        @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  memberships TeamMembership[]

  @@index([practiceId])
}

enum TeamRole {
  PRACTICE_ADMIN
  PHYSICIAN
  MFA
  ADMINISTRATION
  CUSTOM
}

model Patient {
  id            String        @id @default(cuid())
  practiceId    String
  version      Int           @default(1)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         Json          // { given: string[], family: string }
  birthDate    DateTime      @db.Date
  gender       String?       // m/w/d
  tags         String[]
  address      Json?         // { street: string, zip: string, city: string, country: string }
  contact      Json?         // { phone: string, email: string, mobile: string }
  insurance    Json?         // { number: string, type: string, provider: string }
  vitalsLatest Json?         // { bp_systolic: number, bp_diastolic: number, hr: number, temperature: number, spo2: number, glucose: number, bmi: number, updated_at: string }
  vitalsHistory Json         @default("[]") // Array von Vitalwerte-Objekten mit Timestamp
  allergies    Json          @default("[]") // [{ substance: string, severity: string, deleted_at?: string, is_deleted?: boolean }]
  medications  Json          @default("[]") // [{ name: string, dose: string, deleted_at?: string, is_deleted?: boolean }]
  auditLogs    Json          @default("[]") // Array von Audit-Log-Objekten
  
  practice  Practice        @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  notes     PatientNote[]
  encounters Encounter[]

  @@index([practiceId])
  @@index([practiceId, updatedAt(sort: Desc)])
}

model PatientNote {
  id        String   @id @default(cuid())
  patientId String
  authorId  String
  createdAt DateTime @default(now())
  text      String   @db.Text

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId, createdAt(sort: Desc)])
}

model Encounter {
  id        String   @id @default(cuid())
  patientId String
  date      DateTime @db.Date
  location  String?
  reason    String?
  summary   String?  @db.Text

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId, date(sort: Desc)])
}

